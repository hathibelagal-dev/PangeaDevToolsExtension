{
    "manifest_version": 3,
    "name": "Pangea DevTools",
    "version": "0.0.2",
    "devtools_page": "pdt.html",
    "description": "Extends Chrome's DevTools by adding many Pangea's security-related services to it.",
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "permissions": [
        "activeTab",
        "storage",
        "cookies",
        "tabs"
    ]
}
